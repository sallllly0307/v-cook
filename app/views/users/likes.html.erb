<div class="my-recipes-wrapper">
  <div class="container">
    <ul class="user-tabs">
      <li><%= link_to("過去のレシピ", "/users/#{@user.id}") %></li>
      <li class="user-tabs-right"><%= link_to("美味しいね!リスト", "/users/#{@user.id}/likes") %></li>
      <div class="clear"></div>
    </ul>

    <% @likes.each do |like| %>
      <div class="my-recipe">
      <% recipe = Recipe.find_by(id: like.recipe_id) %>
      <img src="/sample-recipe-image.png">
      <%= link_to(recipe.user.name, "/users/#{recipe.user.id}") %>
      <%= link_to(recipe.title, "/recipes/#{recipe.id}") %>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
</div>