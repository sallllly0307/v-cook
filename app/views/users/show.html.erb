<img src="<%= "/user_images/#{@user.image_name}" %>">
<h2><%= @user.name %></h2>
<p><%= @user.email %></p>
<p><%= @user.occupation %></p>
<p><%= @user.age %>歳</p>
<p><%= @user.address %></p>
<p><%= @user.detail %></p>
<% if @user.id == @current_user.id %>
  <%= link_to("編集", "/users/#{@user.id}/edit") %>
<% end %>

<ul>
  <li><%= link_to("レシピ", "/users/#{@user.id}") %></li>
  <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
</ul>

<% @user.recipes.each do |recipe| %>
  <img src="<%= "/user_images/#{recipe.user.image_name}" %>">
  <%= link_to(recipe.user.name, "/users/#{recipe.user.id}") %>
  <%= link_to(recipe.title, "/recipes/#{recipe.id}") %>
<% end %>